<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:VeloMax.ViewModels"
	x:Class="VeloMax.Views.PartView"
	>
	<StackPanel>
		<Design.DataContext>
			<vm:PartViewModel/>
		</Design.DataContext>

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
				<RowDefinition Height="550"/>
			</Grid.RowDefinitions>

			<!-- Title + client type button-->
			<StackPanel>
				<TextBlock
					Grid.Column="0"
					Text="Part"
					Foreground="#000000"
					FontSize="28"
					HorizontalAlignment="Left"
					Margin="0,0,0,20"/>
			</StackPanel>

			<!-- Data + buttons -->
			<Panel Grid.Row="1">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="800"/>
						<ColumnDefinition Width="180"/>
					</Grid.ColumnDefinitions>
					<DataGrid Grid.Column="0"
							  Name="PartGrid"
							  Items="{Binding Parts}"
							  SelectedItem="{Binding SelectedPart}"
							  AutoGenerateColumns="False"
							  CanUserResizeColumns="True"
							  CanUserSortColumns="True"
							  SelectionMode="Single"
							  IsReadOnly="True">
						<DataGrid.Columns>
							<DataGridTextColumn Header="#" Binding="{Binding Id }"/>
							<DataGridTextColumn Header="Description" Binding="{Binding Description }"/>
							<DataGridTextColumn Header="Type" Binding="{Binding Type }"/>
							<DataGridTextColumn Header="Quantity" Binding="{Binding Quantity }"/>
							<DataGridTextColumn Header="Price (â‚¬)" Binding="{Binding UnitPrice }"/>
							<DataGridTextColumn Header="Delivery Delay" Binding="{Binding ProcurementDelay}"/>
						</DataGrid.Columns>
					</DataGrid>

					<!-- Modificator Button -->
					<StackPanel Grid.Column="1"
								HorizontalAlignment="Center">
						<Button
							Content="Add"
							Background="#ABE9B3"
							Margin="0,100,0,0"
							HorizontalContentAlignment="Center"
							Command="{Binding AddPart}"
							Width="140"
							/>
						<Button
							Content="Update"
							Background="#F8BD96"
							Margin="0,100,0,0"
							Width="140"
							Command="{Binding UpdatePart}"
							HorizontalContentAlignment="Center"
							/>
						<Button
							Content="Delete"
							Background="#F28FAD"
							Margin="0,100,0,0"
							Width="140"
							Command="{Binding DeletePart}"
							HorizontalContentAlignment="Center"
							/>
					</StackPanel>
				</Grid>
			</Panel>
		</Grid>
	</StackPanel>
</UserControl>