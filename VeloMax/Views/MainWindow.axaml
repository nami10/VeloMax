<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VeloMax.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="clr-namespace:MaterialDesign.Avalonia.PackIcon;assembly=MaterialDesign.Avalonia.PackIcon"
        xmlns:controls="clr-namespace:VeloMax.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VeloMax.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="VeloMax"
        Width="880"
        Height="560">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

     <Panel Name="MainPanel">
        <!-- <Experimentalacrylicborder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial 
                    BackgroundSource="Digger"
                    TintColor="#96CDFB"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder> -->
        
        <Border Background="White">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="75" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Column="0" 
                    Grid.Row="0"
                    Text="VeloMax"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="22"
                    FontWeight="Bold"
                    Margin="20 0 0 0"
                    Foreground="#161320" />

                <StackPanel Grid.Column="0" Grid.Row="1">
                    <controls:MenuItemButton 
                        Content="Home"
                        Kind="ViewDashboard"
                        Classes="MenuItem"
                        IsChecked="True"
                        Command="{Binding}" />
                    
                    <controls:MenuItemButton
                        Content="Bike and part"
                        Kind="BikeBasket"
                        Classes="MenuItem"
                        Command="{Binding}"
                        />
                    
                    <controls:MenuItemButton 
                        Content="Client"
                        Kind="User"
                        Classes="MenuItem"
                        Command="{Binding}" />
                    
                    <controls:MenuItemButton
                        Content = "Supplier"
                        Kind="BagPersonal"
                        Classes="MenuItem"
                        Command="{Binding}"
                        />
                    
                    <controls:MenuItemButton
                        Content = "Order"
                        Kind="ViewList"
                        Classes="MenuItem"
                        Command="{Binding}"
                        />
                    
                    <controls:MenuItemButton
                        Content = "Stock"
                        Kind="Wrench"
                        Classes="MenuItem"
                        Command="{Binding}"
                        />
                    
                    <controls:MenuItemButton
                        Content = "Other"
                        Kind="DotsHorizontal"
                        Classes="MenuItem"
                        Command="{Binding}"
                        />
                                                            
                </StackPanel>

                <TextBox 
                    Grid.Column="1"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Watermark="Search..."
                    Width="200"
                    Height="40"
                    Classes="SearchTextBox"
                    Margin="5" />

                <ContentControl 
                    Grid.Column="1" 
                    Grid.Row="1" 
                    Grid.ColumnSpan="2"
                    Content="{Binding}"
                    Margin="5" />

            </Grid>
        </Border>
    </Panel>
</Window>